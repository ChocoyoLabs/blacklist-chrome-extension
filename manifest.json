{
  "name": "Facebook Prize Hunters Blacklist",
  "version": "0.0.1",
  "manifest_version" : 2,
  "description": "Create a Facebook Prize Hunters Blacklist",
  "permissions": [
    "activeTab",
    "https://www.facebook.com/*"
  ],
  "icons": {
    "16" : "icon16.png",
    "20" : "icon20.png",
    "24" : "icon24.png",
    "32" : "icon32.png",
    "48" : "icon48.png",
    "64" : "icon64.png",
    "128" : "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.facebook.com/*"],
      "js" : [
        "jquery.js",
        "buttons.js",
        "chrome.js"
      ],
      "css" : [
        "buttons.css",
        "style.css"
      ]
    }
  ],
  "browser_action": {
    "default_icon": "icon128.png",
    "default_popup": "popup.html"
  }
}
